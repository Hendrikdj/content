{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "array",
    "items": {
        "type": "object",
        "required": [
            "@type",
            "compensation",
            "name",
            "description",
            "author",
            "image",
            "url"
        ],
        "properties": {
            "@type": {
                "type": "string",
                "enum": [
                    "https://schema.org/SoftwareApplication"
                ]
            },
            "compensation": {
                "type": "string",
                "enum": [
                    "commercial",
                    "donation",
                    "free"
                ]
            },
            "name": {
                "type": "string"
            },
            "description": {
                "type": "string"
            },
            "author": {
                "type": "object",
                "required": [
                    "@type",
                    "name"
                ],
                "properties": {
                    "@type": {
                        "type": "string",
                        "enum": [
                            "https://schema.org/Person",
                            "https://schema.org/Organization"
                        ]
                    },
                    "name": {
                        "type": "string"
                    },
                    "url": {
                        "type": "string",
                        "pattern": "^https?://"
                    }
                }
            },
            "image": {
                "type": "string",
                "pattern": "^https?://"
            },
            "screenshot": {
                "type": "string",
                "pattern": "^https?://"
            },
            "url": {
                "type": "string",
                "pattern": "^https?://"
            }
        }
    }
}